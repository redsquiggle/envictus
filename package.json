{
	"name": "envictus",
	"version": "1.0.1",
	"description": "Type-safe environment variable management for Node.js",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/redsquiggle/envictus.git"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"bin": {
		"envictus": "./dist/bin.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"check-types": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"knip": "knip",
		"prepare": "lefthook install",
		"check": "pnpm run lint --fix && pnpm run check-types && pnpm run build && pnpm run knip --fix",
		"test": "vitest"
	},
	"keywords": [
		"env",
		"environment",
		"variables",
		"validation",
		"standard-schema",
		"zod",
		"valibot",
		"arktype",
		"cli",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@standard-schema/spec": "^1.1.0",
		"commander": "^14.0.2",
		"dotenv": "^17.2.3",
		"jiti": "^2.6.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@types/node": "^22.0.0",
		"arktype": "^2.1.29",
		"joi": "^18.0.2",
		"knip": "^5.81.0",
		"lefthook": "^2.0.15",
		"typescript": "^5.9.3",
		"valibot": "^1.2.0",
		"vitest": "^4.0.17",
		"yup": "^1.7.1",
		"zod": "^3.24.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	}
}
